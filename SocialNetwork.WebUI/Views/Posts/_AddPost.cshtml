<div id="modal" class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Create post</h1>
                <button id="closeModal" type="button" class="btn-close"></button>
            </div>

            <div class="modal-body p-5 pt-0">
                <form class="" method="post" enctype="multipart/form-data" asp-controller="Posts" asp-action="AddUserPost">
                    <div class="mb-3">
                        <input type="file" class="form-control rounded-3" id="floatingInput" name="mediaFile">
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control rounded-3" id="floatingDescription" placeholder="Description" name="description">
                        <label for="floatingDescription">Description</label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#closeModal').on('click', function(){
            $('#modal').remove();
        });
        $(document).on('click', function(){
            $('#modal').remove();
        })
    </script>
}